<p id="notice"><%= notice %></p>

<h1>Student data</h1>

<table style="width: 90%; margin: 50px; border: 2px solid;">
  <thead style="text-align: center;  border: 1px solid;">
    <tr style="text-align: center;  border: 1px solid;">
      <th style="text-align: center;">Name</th>
      <th style="text-align: center;">Age</th>
      <th style="text-align: center;">Image</th>
      <th style="text-align: center;">Address</th>
      <th style="text-align: center;">Rno</th>
      <th style="text-align: center;">Mobile</th>
      <th style="text-align: center;">Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studentdata.each do |studentdatum| %>
      <tr style="text-align: center;  border: 1px solid;">
        <td><%= studentdatum.name %></td>
        <td><%= studentdatum.age %></td>
        <td><%= studentdatum.image %></td>
        <td><%= studentdatum.address %></td>
        <td><%= studentdatum.rno %></td>
        <td><%= studentdatum.mobile %></td>
        <td><%= studentdatum.course %></td>
        <td id="show"><button style="border-radius:8px; background:#4caf50;"> <%= link_to 'Show', studentdatum %></button></td>
        <td id="edit"><button style="border-radius:8px; background:#ffbb05;"> <%= link_to 'Edit', edit_studentdatum_path(studentdatum) %></button></td>
        <td id="destroy"><button style="border-radius:8px; background:#d50000;"> <%= link_to 'Destroy', studentdatum, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button style="border-radius:2px;">
<%= link_to 'New Student', new_studentdatum_path %>
</button>
